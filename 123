    { Name = "accel_std_x",                Min = 1e-05,    Max = 0.02,     Uint = "g",   Pattern = "average: X = ([%w.]+), Y = [%w.]+, Z = [%w.]+, T = [%w.]+", Value = nil },
    { Name = "accel_std_y",                Min = 1e-05,    Max = 0.02,     Uint = "g",   Pattern = "average: X = [%w.]+, Y = ([%w.]+), Z = [%w.]+, T = [%w.]+", Value = nil },
    { Name = "accel_std_z",                Min = 1e-05,    Max = 0.02,     Uint = "g",   Pattern = "average: X = [%w.]+, Y = [%w.]+, Z = ([%w.]+), T = [%w.]+", Value = nil },
